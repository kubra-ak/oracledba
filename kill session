SELECT 'ALTER SYSTEM KILL SESSION ''' || sid || ',' || serial# || ',@' || inst_id || ''' IMMEDIATE;' AS kill_cmd FROM gv$session WHERE username = 'USERNAME' AND type = 'USER';

