CREATE TABLESPACE DATA_NEW DATAFILE 
  '+DATA' SIZE 32767M AUTOEXTEND OFF,
  '+DATA' SIZE 32767M AUTOEXTEND OFF
LOGGING
FORCE LOGGING
ENCRYPTION USING 'AES128'
DEFAULT STORAGE (ENCRYPT)
ONLINE
EXTENT MANAGEMENT LOCAL AUTOALLOCATE
BLOCKSIZE 8K
SEGMENT SPACE MANAGEMENT AUTO
FLASHBACK ON;

ALTER TABLE MSU.MSU_API_AUDIT MODIFY DEFAULT ATTRIBUTES TABLESPACE DATA_NEW;
ALTER TABLE MSU.MSU_TRANSACTION_LOG MODIFY DEFAULT ATTRIBUTES TABLESPACE DATA_NEW;
ALTER TABLE MSU.MSU_SYSTEM_LOG MODIFY DEFAULT ATTRIBUTES TABLESPACE DATA_NEW;

ALTER TABLE MSU.MSU_SYSTEM_LOG SET SUBPARTITION TEMPLATE 2;

alter table MSU.MSU_API_AUDIT modify default attributes lob (REQUEST) ( tablespace DATA_NEW );
alter table MSU.MSU_API_AUDIT modify default attributes lob (API_RESPONSE) ( tablespace DATA_NEW );
alter table MSU.MSU_API_AUDIT modify default attributes lob (REQUEST_HEADER) ( tablespace DATA_NEW );
alter table MSU.MSU_TRANSACTION_LOG modify default attributes lob (LOG) ( tablespace DATA_NEW );
alter table MSU.MSU_SYSTEM_LOG modify default attributes lob (MESSAGE) ( tablespace DATA_NEW );
alter table MSU.MSU_SYSTEM_LOG modify default attributes lob (STACKTRACE) ( tablespace DATA_NEW );

CREATE INDEX MSU.MSU_TRANSACTION_IND1 ON MSU.MSU_TRANSACTION
(MERCHANT_ID,TS_CREATED)
TABLESPACE DATA_NEW
PARALLEL 4 ONLINE;

alter index MSU.MSU_TRANSACTION_IND1 noPARALLEL;
